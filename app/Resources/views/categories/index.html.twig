{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Categories <small>Manage Shop Categories</small></h1>
                </div>
                <div class="col-md-2">
                    <div class="space-top">
                        <a class="btn btn btn-default" href="{{ path('categories_new') }}">Add category</a>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="space-top">
                        <a class="btn btn btn-default" href="{{ path('admin_products_new') }}">Add product</a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="index.html" class="list-group-item">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                        </a>
                        <a href="{{ path('categories_index') }}" class="list-group-item active main-color-bg"><span class="glyphicon glyphicon-tags" aria-hidden="true"></span> Categories</a>
                        <a href="{{ path('admin_products_index') }}" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Products</a>
                        <a href="orders.html" class="list-group-item"><span class="glyphicon glyphicon-copy" aria-hidden="true"></span> Orders</a>
                        <a href="users.html" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users</a>
                    </div>
                </div>

                <div id="main" class="col-sm-9">
                    {{ include('default/_flash_messages.html.twig') }}
                </div>

                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Categories</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <a class="btn main-color-bg" href="{{ path('categories_new') }}">Add category</a>
                                </div>
                            </div>
                            <br>
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.name }}</td>
                                        <td>
                                            <a class="btn main-color-bg" href="{{ path('categories_edit', { 'id': category.id }) }}">Edit</a>
                                        </td>
                                        <td>
                                            <form method="post" action="{{ path("categories_delete", {'id':category.id}) }}">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
