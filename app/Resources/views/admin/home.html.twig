{% extends 'admin/layout.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <section id="main">
        <div class="container">
            <div class="row">

                {{ include('default/_flash_messages.html.twig') }}

                {{ include('admin/nav.html.twig') }}

                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Orders for the day</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <a class="btn main-color-bg" href="{{ path('categories_new') }}">Add category</a>
                                </div>
                            </div>
                            <br>
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.name }}</td>
                                        <td>
                                            <a class="btn main-color-bg" href="{{ path('categories_edit', { 'id': category.id }) }}">Edit</a>
                                        </td>
                                        <td>
                                            <form method="post" action="{{ path("categories_delete", {'id':category.id}) }}">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}