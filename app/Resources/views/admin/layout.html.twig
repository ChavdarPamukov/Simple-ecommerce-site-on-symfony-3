{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Shop administration</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Welcome, cSp</a></li>
                    <li><a href="login.html"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block header %}
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h1>
                        {% if app.request.attributes.get('_route') == 'dashboard_index'
                            %}<span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard <small>Manage Your Shop</small>
                        {% elseif app.request.attributes.get('_route') == 'categories_index'
                                or (app.request.attributes.get('_route') == 'categories_edit')
                                or (app.request.attributes.get('_route') == 'categories_new')
                            %}<span class="glyphicon glyphicon-tags" aria-hidden="true"></span> Categories <small>Manage Shop Categories</small>
                        {% elseif app.request.attributes.get('_route') == 'admin_products_index'
                                or (app.request.attributes.get('_route') == 'admin_products_new')
                                or (app.request.attributes.get('_route') == 'admin_products_show')
                                or (app.request.attributes.get('_route') == 'admin_products_edit')
                            %}<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Products <small>Manage Shop Products</small>
                        {% elseif app.request.attributes.get('_route') == 'admin_users_index'
                            %}<span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users <small>Manage Shop Users</small>
                        {% endif %}
                    </h1>
                </div>
                <div class="col-md-2">
                    <div class="space-top">
                        <a class="btn btn btn-default" href="{{ path('categories_new') }}">Add category</a>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="space-top">
                        <a class="btn btn btn-default" href="{{ path('admin_products_new') }}">Add product</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}