{% extends 'admin/layout.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <section id="main">
        <div class="container">
            <div class="row">

                {{ include('default/_flash_messages.html.twig') }}

                {{ include('admin/_nav.html.twig') }}

                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Product - {{ product.name }}</h3>
                        </div>
                        <table class="table table-striped table-hover">
                            <tbody>
                            <tr>
                                <th>Image</th>
                                <td><img src="/images/product/{{ product.image }}" style="width: 250px;"/></td>
                            </tr>
                            <tr>
                                <th>Id</th>
                                <td>{{ product.id }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ product.description }}</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>{{ product.price }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <a class="btn main-color-bg button-space"
                           href="{{ path('admin_products_edit', { 'id': product.id }) }}">edit</a>
                        <a class="btn btn-success button-space" href="{{ path('admin_products_index') }}">Back to the list</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}