{% extends 'shop/layout.html.twig' %}

{% block body %}
    <section id="main">
        <div class="container">
            {{ include('shop/nav.html.twig') }}
            <div class="row">
                <div class="col-sm-8">
                    <img src="/images/product/{{ product.image }}" style="width: 70%;"/>
                </div>
                <div class="col-sm-4">
                    <h1>{{ product.name }}</h1>
                    <p>{{ product.description }}</p>
                    <h3>{{ product.price }}</h3>
                    <p><a href="#" class="btn main-color-bg">Buy</a></p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
