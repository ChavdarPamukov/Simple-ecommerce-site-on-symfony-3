{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Product
                        <small>{{ product.name }}</small>
                    </h1>
                </div>
                <div class="col-md-2">
                    <div class="space-top">
                        <a class="btn btn btn-default" href="{{ path('categories_new') }}">Add category</a>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="space-top">
                        <a class="btn btn btn-default" href="{{ path('admin_products_new') }}">Add product</a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="index.html" class="list-group-item">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                        </a>
                        <a href="{{ path('categories_index') }}" class="list-group-item"><span
                                    class="glyphicon glyphicon-tags" aria-hidden="true"></span> Categories</a>
                        <a href="{{ path('admin_products_index') }}" class="list-group-item active main-color-bg"><span
                                    class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Products</a>
                        <a href="orders.html" class="list-group-item"><span class="glyphicon glyphicon-copy"
                                                                            aria-hidden="true"></span> Orders</a>
                        <a href="users.html" class="list-group-item"><span class="glyphicon glyphicon-user"
                                                                           aria-hidden="true"></span> Users</a>
                    </div>
                </div>

                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Product - {{ product.name }}</h3>
                        </div>
                        <table class="table table-striped table-hover">
                            <tbody>
                            <tr>
                                <th>Image</th>
                                <td><img src="/images/product/{{ product.image }}" style="width: 250px;"/></td>
                            </tr>
                            <tr>
                                <th>Id</th>
                                <td>{{ product.id }}</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>{{ product.description }}</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>{{ product.price }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <a class="btn main-color-bg button-space"
                           href="{{ path('admin_products_edit', { 'id': product.id }) }}">edit</a>
                        <a class="btn btn-success button-space" href="{{ path('admin_products_index') }}">Back to the list</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}