{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Products
                        <small>Manage Shop Products</small>
                    </h1>
                </div>
                <div class="col-md-2">
                    <div class="space-top">
                        <a class="btn btn btn-default" href="{{ path('categories_new') }}">Add category</a>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="space-top">
                        <a class="btn btn btn-default" href="{{ path('admin_products_new') }}">Add product</a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group">
                        <a href="index.html" class="list-group-item">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                        </a>
                        <a href="{{ path('categories_index') }}" class="list-group-item"><span
                                    class="glyphicon glyphicon-tags" aria-hidden="true"></span> Categories</a>
                        <a href="{{ path('admin_products_index') }}" class="list-group-item active main-color-bg"><span
                                    class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Products</a>
                        <a href="orders.html" class="list-group-item"><span class="glyphicon glyphicon-copy"
                                                                            aria-hidden="true"></span> Orders</a>
                        <a href="users.html" class="list-group-item"><span class="glyphicon glyphicon-user"
                                                                           aria-hidden="true"></span> Users</a>
                    </div>
                </div>

                <div class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading main-color-bg">
                            <h3 class="panel-title">Products</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <a class="btn main-color-bg" href="{{ path('admin_products_new') }}">Add product</a>
                                </div>
                            </div>
                            <br>
                            <table class="table table-striped table-hover">
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Image</th>
                                    <th>Category</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                                {% for product in products %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('admin_products_show', { 'id': product.id }) }}">{{ product.id }}</a>
                                        </td>
                                        <td>{{ product.name }}</td>
                                        <td><img src="/images/product/{{ product.image }}" style="width: 50px;"/></td>
                                        <td>{{ product.category }}</td>
                                        <td>{{ product.description }}</td>
                                        <td>{{ product.price }}</td>
                                        <td>
                                            <a class="btn btn-default button-space"
                                               href="{{ path('admin_products_show', { 'id': product.id }) }}">show</a>

                                            <a class="btn btn-success button-space"
                                               href="{{ path('admin_products_edit', { 'id': product.id }) }}">edit</a>

                                            <form method="post"
                                                  action="{{ path("admin_products_delete", {'id':product.id}) }}">
                                                <button type="submit" class="btn btn-danger button-space">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
